    }, 
    {
        processor->IP++;

        if ((int) command == (POP | REG))
        {
            reg = (registerNames) *(processor->CS + processor->IP);

            err = processor_pop_to_register(processor, reg);

            processor->IP++;
        }
        else if(((unsigned int) command & COMMAND_MASK) == (POP | RAM | IMM))
